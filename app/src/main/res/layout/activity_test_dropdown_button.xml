<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meng.mengtestapplication.activity.TestDropdownButtonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.meng.mengtestapplication.view.DropdownButton
            android:id="@+id/dropdown_button1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center">

        </com.meng.mengtestapplication.view.DropdownButton>

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/colorGray1" />

        <com.meng.mengtestapplication.view.DropdownButton
            android:id="@+id/dropdown_button2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center">

        </com.meng.mengtestapplication.view.DropdownButton>

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/colorGray1" />

        <com.meng.mengtestapplication.view.DropdownButton
            android:id="@+id/dropdown_button3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center">

        </com.meng.mengtestapplication.view.DropdownButton>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray1" />
</LinearLayout>
